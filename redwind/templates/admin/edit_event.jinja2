{% extends "admin/edit_post.jinja2" %}
{% block content_fields %}
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="title" value="{{ post.title or '' }}"/>
  </div>
  <div class="form-group">
    <label>Content</label>
    <textarea class="form-control" name="content" id="content" rows="8">{{ post.content or '' }}</textarea>
  </div>
{% endblock content_fields %}
